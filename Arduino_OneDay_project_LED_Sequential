const int LED_FLOOR[7] = {A0, 2, 3, 4, 5, 6, 7}; // LED í•€ ë°°ì—´
unsigned long previousMillis = 0;
int current_LED = 0;  // í˜„ì¬ LED ìœ„ì¹˜
int direction = 1;  // LED ë°©í–¥ (1: ìœ„ë¡œ, -1: ì•„ë˜ë¡œ)

void setup() {
    // ëª¨ë“  LED í•€ì„ ì¶œë ¥ ëª¨ë“œë¡œ ì„¤ì •
    for (int i = 0; i < 7; i++)
    {
        pinMode(LED_FLOOR[i], OUTPUT);
        digitalWrite(LED_FLOOR[i], LOW); // ğŸ”¹ ì´ˆê¸° ìƒíƒœ: ëª¨ë“  LED OFF
    }
  	digitalWrite(LED_FLOOR[0], HIGH);
}

void loop() {
    unsigned long currentMillis = millis();

    // ì¼ì • ì‹œê°„(interval)ë§ˆë‹¤ ì‹¤í–‰
    if (currentMillis - previousMillis >= 1000) {  // ğŸ”¹ ì •í™•í•œ ê°„ê²© ë¹„êµ (== ëŒ€ì‹  >= ì‚¬ìš©)
        previousMillis = currentMillis;  // ğŸ”¹ ì´ì „ ì‹œê°„ ì—…ë°ì´íŠ¸
      

        // í˜„ì¬ LED ë„ê¸°
        digitalWrite(LED_FLOOR[current_LED], LOW);

        // ë‹¤ìŒ LED ê²°ì •
        current_LED += direction;
		
      	// í˜„ì¬ LED ì¼œê¸°
      	digitalWrite(LED_FLOOR[current_LED], HIGH);

        // ëì— ë„ë‹¬í•˜ë©´ ë°©í–¥ ë³€ê²½ (ì˜¬ë¼ê°”ë‹¤ê°€ ë‚´ë ¤ê°€ë„ë¡)
        if (current_LED == 6) {
            direction = -1;  // ë‚´ë ¤ê°€ê¸°
        } else if (current_LED == 0) {
            direction = 1;  // ë‹¤ì‹œ ì˜¬ë¼ê°€ê¸°
        }
    }
}
